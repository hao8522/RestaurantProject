@if(ViewBag.list != null )
{

    foreach ( Models.News item in ViewBag.list)
    {


        <div id="nlistdiv">
            <div class="newsItem">
                <div class="newtitle">
                    <a href='NewsDetail?newsId=@item.NewsId'>
                        @item.NewsTitle

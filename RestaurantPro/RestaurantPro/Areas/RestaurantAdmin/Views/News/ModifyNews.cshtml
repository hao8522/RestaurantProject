
@{
    ViewBag.Title = "ModifyNews";
    Layout = "~/Areas/RestaurantAdmin/Views/Shared/ManageLayout.cshtml";
}

@model Models.News
<script src="~/ThirdFile/ckeditor/ckeditor.js"></script>

@using (Html.BeginForm("ModifyNews", "News", FormMethod.Post))
{



    <div class="txtContentdiv">
        @Html.Hidden("NewsId",Model.NewsId)
        <div class="txtItemdiv">
            Title：@Html.TextBox("NewsTitle", @Model.NewsTitle, new { @class = "txt" })

            &nbsp;&nbsp;
            Category：


            @Html.DropDownList("CategoryId", (SelectList)ViewBag.dList)
        </div>
        <div class="txtItemdiv">
            Content：
        </div>
        <div class="txtItemdiv">

            @Html.TextArea("NewsContents",@Model.NewsContents)
            <script type="text/javascript">
                CKEDITOR.replace("NewsContents")
            </script>
        </div>
        <div class="txtItemdiv">
            <button class="btncss" id="btnPublish" type="submit">Modify</button>
        </div>
    </div>
}